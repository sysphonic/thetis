      menus = {
        :login => {:disp => t('btn.login'), :icon_tag => '', :action => 'doLogin();'},
        :desktop => {:disp => t('menu.desktop'), :icon_tag => 'desktop', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'desktop', :action => 'show')}');"},
