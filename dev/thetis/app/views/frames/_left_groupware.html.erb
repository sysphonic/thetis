      end
      if $thetis_config[:menu]['disp_research'] == '1'
        menus[:research] = {:disp => t('menu.research'), :icon_tag => 'research', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'researches', :action => 'index')}');"}
      end
      if $thetis_config[:menu]['disp_user_list'] == '1'
        menus[:user_list] = {:disp => t('menu.user_list'), :icon_tag => 'user_list', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'users', :action => 'list')}');"}
      end
      if $thetis_config[:menu]['disp_mail'] == '1'
        menus[:mail] = {:disp => t('menu.mail'), :icon_tag => 'mail', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'mail_folders', :action => 'show_tree', :tips => 'true')}');"}
      end
      if $thetis_config[:menu]['disp_addressbook'] == '1'
        menus[:addressbook] = {:disp => t('menu.addressbook'), :icon_tag => 'addressbook', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'addressbook', :action => 'list')}');"}
      end
      if $thetis_config[:menu]['disp_paintmail'] == '1'
        menus[:paintmail] = {:disp => t('menu.paintmail'), :icon_tag => 'paintmail', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'paintmail', :action => 'index')}');"}
      end
      if $thetis_config[:menu]['disp_timecard'] == '1'
        menus[:timecard] = {:disp => t('menu.timecard'), :icon_tag => 'timecard', :action => "onGroupwareMenuClicked(this, '#{url_for(:controller => 'timecards', :action => 'month')}');"}
      end
      menus.each do |menu_name, menu_attrs|
      %>
        <tr style="height:28px;">
          <td class="menu_td" onclick="<%= raw(menu_attrs[:action]) %> return false;" onmouseover="activateMenu('<%= menu_attrs[:icon_tag] %>', this);" onmouseout="deactivateMenu(this);">
            <a id="menu_<%= menu_name %>" href="#" onclick="return false;" style="color:inherit;"><%= menu_attrs[:disp] %></a>
          </td>
        </tr>
        <tr style="height:3px;"><td></td></tr>
      <% end %>
      </table>
      <!-------INDEX-Column END------->
      <div id="adminMenu" style="display:none;">
        <table cellspacing="1" cellpadding="0" style="width:100%; margin-top:5px;" align="center">
          <tr style="height:28px;">
            <td style="text-align:center;" onmouseover="activateAdminMenu(this);" onmouseout="deactivateAdminMenu(this);">
              <a href="javascript:this.onclick()" class="a_underline" onclick="doUpdateIframe('<%= url_for(:controller => 'frames', :action => 'admin') %>', '<%= mode %>'); return false;" onblur="setTimeout('hideAdminMenu()', 200);" style="color:darkgreen;"><%= t('menu.for_admin') %></a>
              <img src="<%= THETIS_RELATIVE_URL_ROOT %>/images/arrow_disc_green.gif">
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
  <tr style="height:100%;"><td></td></tr>

  <tr style="height:48px;">
    <td style="text-align:left; padding-left:15px; background:url('<%= THETIS_RELATIVE_URL_ROOT %>/images/left_down.png') center top no-repeat;">
      <table cellspacing="0" cellpadding="0" style="width:50%; cursor:pointer;" onclick="doUpdateIframe('<%= url_for(:controller => 'schedules', :action => 'month') %>?id='+getDateString(), '<%= mode %>');" onmouseover="this.style.border='1px dotted white'; hideAdminMenu();" onmouseout="this.style.border=''">
        <tr>
          <td style="padding:0px 5px; color:white; font-size:9pt; line-height:13px;" nowrap>
            <div id="div_time" style="text-align:center;"></div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table id="adminPopup" cellspacing="0" cellpadding="0" style="width:170px; position:absolute; display:none; z-index:99999; background-color:white; border:outset 3px green;">
