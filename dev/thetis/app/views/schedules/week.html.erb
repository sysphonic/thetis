
<%= render(:partial => 'common/jkl_calendar_init') %>

<script type="text/javascript">

var calDisp = new JKL.Calendar("div_cal_disp", "form_schedule", "date");
calDisp.setFunc(
          function() {
            _z("date_wday").innerHTML = "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;";
            doUpdatePage();
          }
        );
calDisp.setStyle( "frame_color", "#3333CC" );

</script>

<%
date_s = @date.strftime(Schedule::SYS_DATE_FORM)

@groups_cache ||= {}
@teams_cache ||= {}
%>

<%= form_tag( {:controller => 'schedules', :action => 'index'}, :method => 'get', :name => 'form_schedule', :id => 'form_schedule') %>

<table style="margin:0px auto; width:98%;" cellspacing="0" cellpadding="0">
  <tr>
    <td style="width:30%; text-align:left;">
    <% if !@login_user.nil? and @login_user.admin? User::AUTH_SCHEDULE %>
      <table style="margin:0px auto 0px 0px; width:65px;" cellspacing="0" cellpadding="0">
        <tr>
          <td nowrap style="width:30px; text-align:left;">
            <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/icons/config.png"  title="<%= t('btn.config') %>" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'schedules', :action => 'configure') %>';">
          </td>
        </tr>
      </table>
    <% end %>
    </td>
    <td nowrap style="width:40%; text-align:center;">
      <% if @login_user.nil? %>
        &nbsp;&nbsp;<span style="color:navy"><%= t('schedule.login_required') %></span>&nbsp;&nbsp;
      <% end %>
    </td>
    <td nowrap style="width:30%; text-align:right;">
      <%
      display = [[h(t('schedule.calendar')), 'month'], [h(t('schedule.unit_week')), 'week'], [h(t('schedule.unit_day')), 'day']]
      unless @login_user.nil?
        groups_a = @login_user.get_groups_a
        groups_a.each do |group_id|
          display << [h(Group.get_name(group_id)), 'group_'+group_id] unless group_id == 0
        end
        teams_a = @login_user.get_teams_a
        teams_a.each do |team_id|
          display << [h(Team.get_name(team_id, @teams_cache)), 'team_'+team_id] unless team_id == 0
        end
        display << [h(t('group.other_group')), 'group_other']
      end
      %>
      <%= t('cap.display') %> <%= select_tag 'display',
                               options_for_select(display, params[:display]),
                               :onchange => "if (this.options[this.selectedIndex].value=='group_other') { showGroupTree(); } else { submit(); prog('TOP-RIGHT'); }"
      %>
    </td>
  </tr>
</table>

<table style="width:100%;" cellspacing="0" cellpadding="0">
  <tr>
    <td style="text-align:center;">
<%
yesterday = @date - 1
tomorrow = @date + 1
last_week = @date - 7
next_week = @date + 7
%>
      <a class="calendar_paging" href="#" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'schedules', :action => 'week', :date => last_week.strftime(Schedule::SYS_DATE_FORM)) %>'; return false;">&nbsp;&lt;&lt;&nbsp;</a>&nbsp;&nbsp;
      <a class="calendar_paging" href="#" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'schedules', :action => 'week', :date => yesterday.strftime(Schedule::SYS_DATE_FORM)) %>'; return false;">&nbsp;&lt;&nbsp;</a>&nbsp;&nbsp;
      <input class="date_label" name="date" type="text" readonly value="<%= date_s %>" onclick="calDisp.write();" /> <span id="date_wday" style="color:crimson;">(<%= Schedule::wday_name(@date.wday) %>)</span><span id="div_cal_disp"></span>
      &nbsp;&nbsp;<a class="calendar_paging" href="#" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'schedules', :action => 'week', :date => tomorrow.strftime(Schedule::SYS_DATE_FORM)) %>'; return false;">&nbsp;&gt;&nbsp;</a>
      &nbsp;&nbsp;<a class="calendar_paging" href="#" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'schedules', :action => 'week', :date => next_week.strftime(Schedule::SYS_DATE_FORM)) %>'; return false;">&nbsp;&gt;&gt;&nbsp;</a>
    </td>
  </tr>
</table>

</form>

<%
@holidays ||= Schedule.get_holidays

7.times do |day_idx|
  @schedules = Schedule.get_user_day(@login_user, @date, @holidays)
  date_s = @date.strftime(Schedule::SYS_DATE_FORM)
%>

<div id="div_timetable_<%= day_idx %>" style="padding-bottom:5px">
<table style="width:100%;" cellspacing="0" cellpadding="0">
  <% unless @login_user.nil? %>
  <tr>
    <td></td>
    <td style="text-align:left; padding-left:8px;">
      <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/item_add.gif" title="<%= t('btn.create') %>" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'schedules', :action => 'day', :date => date_s, :showNew => 'true') %>';">
    </td>
  </tr>
  <tr style="height:2px;"><td></td></tr>
  <% end %>
  <tr>
    <td nowrap style="width:10%; text-align:center; background-color:<%= THETIS_WDAY_COLOR[@date.wday] %>;">
      <%= @date.strftime(THETIS_DATE_FORMAT_MD) %><br/>
      (<%= Schedule::wday_name(@date.wday) %>)
    </td>
    <td style="width:90%; text-align:center; padding:0px;">
      <%= render(:partial => 'timetable') %>
    </td>
  </tr>
</table>
</div>
<%
  @date += 1
end
%>


<%= render(:partial => 'common/schedule_func', :locals => {:from => 'schedules'}) %>

<script type="text/javascript">

function editScheduleDetail(date, id)
{
  prog("TOP-RIGHT");
  location.href="<%= url_for(:controller => 'schedules', :action => 'day') %>?date="+date+"&edit_id="+id;
}

function doScheduleDelete(date, id, title)
{
  confm("<%= t('paren.square.left') %>" + title + "<%= t('schedule.confirm_to_delete') %>", "_doScheduleDelete('"+date+"', "+id+")");
}

function _doScheduleDelete(date, id)
{
  prog("TOP-RIGHT");
  location.href="<%= url_for(:controller => 'schedules', :action => 'day') %>?date="+date+"&doDelete="+id;
}

function doSelectGroup(frm)
{
  var boxInstance = ThetisBox.getInstanceForElem(frm);
  if (!boxInstance) {
    return false;
  }

  var thetisBoxProgress = prog("TOP-RIGHT");

  var display = _z("display");
  display.options[display.selectedIndex].value = "group_" + ThetisBox.getTreeSelect(boxInstance.id);

  document.form_schedule.submit()
}

function showGroupTree()
{
  var thetisBox = new ThetisBox;
  thetisBox.setFormTag("<form action=\"<%= url_for(:controller => 'schedules', :action => 'get_group_users') %>\" onsubmit=\"doSelectGroup(this); return false;\">");
  thetisBox.show("CENTER", "", "TREE", "", "<%= t('group.select_to_show')%>", "");
  thetisBox.setTree("<%= url_for(:controller => 'groups', :action => 'ajax_get_tree') %>", "");
}

function doUpdatePage()
{
  document.form_schedule.submit();
  prog("TOP-RIGHT");
}

</script>
