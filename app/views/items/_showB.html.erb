<script type="text/javascript">

function getDescriptionWidth()
{
  var leftWidthPercent = 0;
  var horizontalFrame = parent.document.getElementById("horizontalFrame");
  if (horizontalFrame != null) {
    leftWidthPercent = horizontalFrame.cols.split("%")[0];
  }
  var mainWidthMax = screen.availWidth*(100-leftWidthPercent)/100;
  return (mainWidthMax*55/100);
}

</script>

