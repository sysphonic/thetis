  var thetisBox = new ThetisBox;
  thetisBox.title = title;
  thetisBox.show("CENTER", "", "TREE", "doSelectFolder("+thetisBox.id+", '"+item_id+"')", "<%= t('item.select_folder_to_move_to')%>", "");
