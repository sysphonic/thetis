
<%
team = @item.team
if team.nil?
%>

  <%= t('paren.not_organized') %>

<% else %>

  <table style="width:100%;">
    <tr>
      <td style="text-align:left; width:30%;">
        <%= team.get_status_name %>
      </td>
    <%
    if !@login_user.nil? \
        and (@login_user.admin?(User::AUTH_TEAM) or @login_user.id == @item.user_id)
    %>
      <td style="text-align:left;">
        <table>
          <tr>
        <% if (team.status == Team::STATUS_ACTIVATED) %>
            <td class="prim_btn" onclick="doChangeTeamStatus(<%= team.id %>, '<%= Team::STATUS_DEACTIVATED %>');">
              <%= t('btn.deactivate') %>
            </td>
        <% else %>
            <td class="prim_btn" onclick="doChangeTeamStatus(<%= team.id %>, '<%= Team::STATUS_ACTIVATED %>');">
              <%= t('btn.activate') %>
            </td>
        <% end %>
          </tr>
        </table>
      </td>
    <% end %>
    </tr>
  </table>

<% end %>

<%= render(:partial => 'common/flash_notice') %>


<script type="text/javascript">

doChangeTeamStatus = function(team_id, status)
{
  var thetisBox = prog("TOP-RIGHT");

  var addParams = [];
  addParams.push("team_id="+team_id);
  addParams.push("status="+status);

  new Ajax.Updater(
      "div_team_status",
      "<%= url_for(:controller => 'items', :action => 'change_team_status') %>",
      {
        method:"get",
        parameters:addParams.join("&"),
        evalScripts:true,
        onComplete:function(request) {
          thetisBox.remove();
        }
      }
    );
}
</script>
