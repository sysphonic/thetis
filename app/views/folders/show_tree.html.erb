    %>
    ["<%= folder.id %>", " <%= folder_name %>", "", "selectFolder('<%= folder.id %>');", <%= img_idx %>]
    <%
      if idx < (child_folders.length - 1)
    %>
    ,
    <%
      end
    end
    %>
