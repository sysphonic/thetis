<script type="text/javascript">

function onLoadSub()
{
  setTimeout(forBugfulIE, 500);
}

function forBugfulIE()
{
  // Bugful IE decides width of an input-text control depending on the length of its content.
  _z("general_default_page").value = restoreHTML("<%= YamlHelper.get_value(@yaml, 'general.default_page', nil) %>");
  _z("topic_caption").value = restoreHTML("<%= YamlHelper.get_value(@yaml, 'topic.caption', nil) %>");
}


var thetisBoxHeaderMenuInfo = null;

function onHeaderMenuInfoOk(org_name)
{
  var btnOk = _z("header_menu_info_ok");
  btnOk.disabled = true;
  var btnCancel = _z("header_menu_info_cancel");
  btnCancel.disabled = true;

  var thetisBoxProgress = prog("CENTER");

  var addParams = [];
  addParams.push("org_name="+encodeURIComponent(org_name));
  addParams.push(Form.serialize(document.form_header_menu_info));

  new Ajax.Updater(
      "div_ajax_header_menu",
      document.form_header_menu_info.action,
      {
        evalScripts:false,
        parameters:addParams.join("&"),
        onComplete:function(request) {
          thetisBoxProgress.remove();
          thetisBoxHeaderMenuInfo.remove();

          request.responseText.evalScripts();
        }
      }
    );
}

function onHeaderMenuInfoCancel()
{
  thetisBoxHeaderMenuInfo.remove();
}

function doEditHeaderMenu(org_name)
{
  if (thetisBoxHeaderMenuInfo != null) {
    return;
  }

  var addParams = [];
  if (org_name != null) {
    addParams.push("org_name=" + encodeURIComponent(org_name));
  }
  addParams.push("authenticity_token=<%= form_authenticity_token %>");

  var thetisBoxProgress = prog("TOP-RIGHT");

  new Ajax.Request(
      "<%= url_for(:controller => 'config', :action => 'edit_header_menu') %>",
      {
        method:"get",
        parameters:addParams.join("&"),
        onComplete:function(request) {
          thetisBoxProgress.remove();

          thetisBoxHeaderMenuInfo = new ThetisBox;
          thetisBoxHeaderMenuInfo.setOnClose(function(){ thetisBoxHeaderMenuInfo = null; });
          thetisBoxHeaderMenuInfo.title = "<%= t('menu.header_menu') %>";
          thetisBoxHeaderMenuInfo.show("CENTER", "460,280", "TRAY", "", "", request.responseText.stripScripts());
          request.responseText.evalScripts();
        }
      }
    );
  return true;
}

function onDeleteHeaderMenuClicked(name)
{
  confm("<%= t('paren.square.left') %>" + escWQuotes(name) + "<%= t('msg.confirm_to_delete') %>", "doDeleteHeaderMenu('"+escQuotes(name)+"')");
}

function doDeleteHeaderMenu(name)
{
  var addParams = [];
  addParams.push("org_name=" + encodeURIComponent(name));
  addParams.push("authenticity_token=<%= form_authenticity_token %>");

  var thetisBoxProgress = prog("TOP-RIGHT");

  new Ajax.Updater(
      "div_ajax_header_menu",
      "<%= url_for(:controller => 'config', :action => 'destroy_header_menu') %>",
      {
        method:"post",
        parameters:addParams.join("&"),
        evalScripts:true,
        onComplete:function(request) {
          thetisBoxProgress.remove();
        }
      }
    );
}

function doRegister()
{
  var arr = ["general_default_page", "smtp_from_address", "smtp_server", "smtp_port"];

  if (_z("smtp_auth_enabled").checked) {
    arr.push("smtp_user_name");
  }

  for (var i=0; i < arr.length; i++) {
    if (_z(arr[i]).value.length <= 0) {
      msg("<%= t('msg.specify_indispensable') %>");
      return;
    }
  }

  if (_z("smtp_auth_enabled").checked) {
    arr = ["smtp_auth_plain", "smtp_auth_login", "smtp_auth_cram_md5"];

    var checked = false
    for (var i=0; i < arr.length; i++) {
      if (_z(arr[i]).checked) {
        checked = true;
        break;
      }
    }
    if (!checked) {
      msg("<%= t('config.select_smtp_auth') %>");
      return;
    }
  }

  var smtp_port = _z("smtp_port").value;
  if (isNaN(smtp_port) || parseInt(smtp_port, 10) < 1 || parseInt(smtp_port, 10) > 65535) {
    msg("<%= t('config.invalid_smtp_port') %>");
    return;
  }

  prog("TOP-RIGHT");
  document.form_config.submit();
}

</script>

