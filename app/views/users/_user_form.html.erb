      </td>
    </tr>
    <tr>
      <td class="item_cap_td" nowrap>
        <label for="user_figure"><%= User.human_attribute_name('figure') %></label>
      </td>
      <td class="item_value_td">
        <%= radio_button('user', 'figure', 'boy_green') %><label for="user_figure_boy_green"> <img src="<%= THETIS_RELATIVE_URL_ROOT %>/images/boy_green.png" title="Boy green" alt="Boy green" /></label>
