        <%= text_field('user', 'tel1', :style => 'ime-mode:disabled') %><br/>
        <%= select_tag('user[tel2_note]', options_for_select(options, tel2_note)) %>
        <%= text_field('user', 'tel2', :style => 'ime-mode:disabled') %><br/>
