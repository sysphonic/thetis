      </td>
      <td class="item_value_td">
        <%= text_field('user', 'name', :style => 'ime-mode:disabled') %>
      </td>
    </tr>
  <%
  req_pass = false
  if $thetis_config[:menu]['open_user_reg'] == '1'
    unless  params[:action]=='new' or params[:action]=='create'
      req_pass = true
    end
  else
    req_pass = true
  end
  if req_pass
  %>
